<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MakerHub ScoreBoard"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/titulos"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_connection_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Battery: --%"
            android:textAlignment="center"
            android:textColor="@color/titulos"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Side A Controls -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Side A"
                    android:textColor="@color/titulos"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_A_inc"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/buttons"
                    android:text="+"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView_scoreA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="64sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_A_dec"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/buttons"
                    android:text="-"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Side B Controls -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Side B"
                    android:textColor="@color/titulos"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_B_inc"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/buttons"
                    android:text="+"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView_scoreB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="64sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_B_dec"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/buttons"
                    android:text="-"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/button_reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/buttons"
                android:text="Reset scores"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/progressBar_reset"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:visibility="invisible"
                android:progressDrawable="@android:drawable/progress_horizontal"
                android:progressTint="@color/white"
                android:max="2000" />
        </FrameLayout>

        <Button
            android:id="@+id/display_on_off"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/buttons"
            android:text="Display ON/OFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sound_on_off"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/buttons"
            android:text="Sound ON/OFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/change_side"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/buttons"
            android:text="Change sides"
            android:textSize="18sp" />

        <Button
            android:id="@+id/close_app"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/buttons"
            android:text="CLOSE"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>